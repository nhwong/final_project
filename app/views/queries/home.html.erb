<%= if @dish.nil? then "No Dish" else @dish.dish end %>

<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <h2 align="center"> Start Cooking </h2>
  </div>
</div>

<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <form action="queries/retrieve">
      <div class="form-group">
        <input type="text" id="query" name="query" class="form-control">
      </div>
      <div class="col-md-offset-4 col-md-4">
        <button class="btn">
          Get Ingredients
        </button>
      </div>
    </form>
  </div>
</div>
